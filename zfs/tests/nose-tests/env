#!/bin/bash

export ZFS_CONFIG_ROOT=`pwd`

export PYTHONPATH=$PYTHONPATH:`pwd`:`pwd`/../../insecticide/nose-tests

export NOSE_TESTMATCH='((?:^|[\\b_\\./-])[Mm]eta)|((?:^|[\\b_\\./-])[Tt]est)'
export NOSE_EVAL_ATTR='not disabled'

export NOSE_WITH_ZFSCONFIG=yes
export ZFS_CONFIG_FILE=$ZFS_CONFIG_ROOT/zfs_test_config

export NOSE_WITH_ZFSSTRESSGENERATOR=yes
export STRESS_TEST_LENGTH=50
export STRESS_TESTS_BY_CLASS=1
export STRESS_RETRIES_AFTER_FAILURE=0

export DJANGO_SETTINGS_MODULE=settings

export NOSE_WITH_SNAPSHOTPLUGIN=yes

export NOSE_WITH_ZFSREPORTPLUGIN=yes

export PATH=$PATH:/sbin:/usr/sbin
